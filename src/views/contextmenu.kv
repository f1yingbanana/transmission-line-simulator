<ContextMenu>:
    id: menu
    size: 0, 0
    _container: container
    opacity: 0
    elevation: 8

    canvas.before:
        StencilPush

        RoundedRectangle:
            radius: [4]
            size: self.size
            pos: self.pos

        StencilUse

    canvas.after:
        StencilPop
        
    BoxLayout:
        id: container
        pos: menu.pos
        size: menu.size
        orientation: 'vertical'
