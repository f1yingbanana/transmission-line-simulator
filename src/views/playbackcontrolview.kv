#:import constants util.constants
#:include src/views/materialbutton.kv

<PlaybackControlView>:
    id: playbackControlView
    spacing: 20
    _playButton: playButton
    _pauseButton: pauseButton
    _stopButton: stopButton
    _slowDownButton: slowDownButton
    _speedUpButton: speedUpButton
    _speedLabel: speedLabel
    _timeLabel: elapsedLabel
    _statusLabel: statusLabel

    MaterialWidget:
        id: statusWidget
        width: 230
        size_hint_x: None

        BoxLayout:
            id: statisLayout
            pos: statusWidget.pos
            size: statusWidget.size
            padding: 20, 10

            Label:
                id: statusLabel
                size: self.texture_size
                size_hint_x: None
                text: 'Status: editing'
                font_size: 24
                color: constants.TEXT_BLACK

    MaterialWidget:
        id: elapsedWidget
        width: elapsedLayout.minimum_width
        size_hint_x: None

        BoxLayout:
            id: elapsedLayout
            pos: elapsedWidget.pos
            width: self.minimum_width
            height: elapsedWidget.height
            padding: 20, 10

            Label:
                id: elapsedLabel
                size: self.texture_size
                size_hint_x: None
                text: '0 ns'
                font_size: 24
                color: constants.TEXT_BLACK

    Widget:
        size_hint_x: None
        width: 50

    MaterialButton:
        id: slowDownButton
        icon: unichr(0xf3a0)
        onClick: [lambda: playbackControlView.onSlowDownButtonClick()]

    MaterialWidget:
        id: speedBoxWidget
        width: speedBoxLayout.minimum_width
        size_hint_x: None

        BoxLayout:
            id: speedBoxLayout
            pos: speedBoxWidget.pos
            width: self.minimum_width
            height: speedBoxWidget.height
            padding: 20, 10

            Label:
                id: speedLabel
                size: self.texture_size
                size_hint_x: None
                text: '1x'
                font_size: 24
                color: constants.TEXT_BLACK

    MaterialButton:
        id: speedUpButton
        icon: unichr(0xf39f)
        onClick: [lambda: playbackControlView.onSpeedUpButtonClick()]

    Widget:
        size_hint_x: None
        width: 50

    MaterialButton:
        id: playButton
        icon: unichr(0xf3aa)
        onClick: [lambda: playbackControlView.onPlayButtonClick()]

    MaterialButton:
        id: pauseButton
        icon: unichr(0xf3a7)
        onClick: [lambda: playbackControlView.onPauseButtonClick()]

    MaterialButton:
        id: stopButton
        icon: unichr(0xf3b6)
        onClick: [lambda: playbackControlView.onStopButtonClick()]

    Widget

