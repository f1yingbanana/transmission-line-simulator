#import constants util.constants

<SourceEditor>:
    _fullSize: dp(200), dp(308)
    _container: container

    impedanceTextField: impedanceTextField
    voltageTextField: voltageTextField
    widthTextField: widthTextField

    gaussButton: gaussButton
    squareButton: squareButton
    triangleButton: triangleButton

    prevButton: prevButton
    nextButton: nextButton

    selection: selectedBox

    BoxLayout:
        id: container
        orientation: 'vertical'
        size: self.parent.width, self.minimum_height
        pos: self.parent.pos
        padding: dp(8)

        BoxLayout:
            padding: dp(8)
            size_hint_y: None
            height: dp(66)

            MaterialButton:
                id: gaussButton
                width: self.height
                size_hint_x: None
                raised: False

                canvas:
                    Color:
                        rgba: constants.PRIMARY

            Widget

            MaterialButton:
                id: squareButton
                width: self.height
                size_hint_x: None
                raised: False

            Widget

            MaterialButton:
                id: triangleButton
                width: self.height
                size_hint_x: None
                raised: False
                

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: dp(8)

            MaterialTextField:
                id: voltageTextField
                size_hint_y: None
                title: 'Peak Voltage'
                suffix: 'V'

            Widget:
                height: dp(16)
                size_hint_y: None

            MaterialTextField:
                id: widthTextField
                size_hint_y: None
                title: 'Wave Width'
                suffix: 'm'

            Widget:
                height: dp(16)
                size_hint_y: None

            MaterialTextField:
                id: impedanceTextField
                size_hint_y: None
                title: 'Impedance'
                suffix: 'ohm'

        Widget:
            height: dp(16)
            size_hint_y: None

        BoxLayout:
            size: self.parent.width, nextButton.height
            size_hint_y: None

            MaterialButton:
                id: prevButton
                raised: False
                icon: unichr(0xf2fa)

            Widget

            MaterialButton:
                id: nextButton
                raised: False
                icon: unichr(0xf2fb)

    Widget:
        id: selectedBox
        size: dp(50), dp(50)
        center: gaussButton.center

        canvas:
            Color:
                rgba: constants.PRIMARY
            Line:
                rounded_rectangle: self.x, self.y, self.width, self.height, dp(5)
                width: dp(1)
