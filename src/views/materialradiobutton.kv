<MaterialRadioButton>:
    size: dp(30), dp(30)
    _ringWidth: dp(4)
    _dotRadius: self.width / 2 - 2 * self._ringWidth
    _fillAmount: 0
    size_hint: None, None
    color: 0, 1, 0, 1


    canvas:
        StencilPush

        Ellipse:
            pos: self.x + self._ringWidth, self.y + self._ringWidth
            size: self.width - 2 * self._ringWidth, self.height - 2 * self._ringWidth

        StencilUse

        Color:
            rgba: self.color

        Ellipse:
            size: self.size
            pos: self.pos

        StencilPop

        Ellipse:
            pos: self.center_x - self._fillAmount * self._dotRadius * 2, self.center_y - self._fillAmount * self._dotRadius * 2
            size: self._fillAmount * self._dotRadius * 2, self._fillAmount * self._dotRadius * 2
