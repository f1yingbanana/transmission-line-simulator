#:import constants util.constants
#:include src/views/exportdialog.kv

<OscilloscopeGraphView>:
    size_hint_y: None
    height: self.width / 2

    container: container
    coordLabel: coordLabel

    BoxLayout:
        id: container
        size: self.parent.size
        pos: self.parent.pos

    Label:
        id: coordLabel
        font_size: sp(12)
        color: constants.TEXT_BLACK

    MaterialButton:
        id: exportButton
        x: self.parent.x + dp(8)
        y: self.parent.y + dp(8)
        size: dp(30), dp(30)
        size_hint: None, None
        icon: unichr(0xf22a)
        onClick: [lambda: self.parent.onExportButtonClick()]
