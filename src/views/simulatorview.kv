#:include src/views/materialwidget.kv
#:include src/views/materialbutton.kv
#:include src/views/playbackcontrolview.kv

<SimulatorView>:
    id: simulatorView
    graphView: graphView
    playbackControlView: playbackControlView

    canvas:
        Color:
            rgba: (245 / 255.0, 245 / 255.0, 245 / 255.0, 1)
        Rectangle:
            size: self.size

    BoxLayout:
        pos: simulatorView.pos
        size: simulatorView.size

        BoxLayout:
            size_hint_x: 0.65
            orientation: 'vertical'

            spacing: 40
            padding: 80

            MaterialWidget:
                size_hint_y: 0.48

            AnchorLayout:
                size_hint_y: 0.04

                PlaybackControlView:
                    id: playbackControlView

            GraphView:
                id: graphView
                size_hint_y: 0.48


        ScrollView:
            do_scroll_x: False
            size_hint_x: 0.35

            BoxLayout:
                height: self.minimum_height
                size_hint: 1, None
                orientation: 'vertical'

                spacing: 80
                padding: 80

                MaterialWidget:
                    height: 400
                    size_hint_y: None
                    raised: False
                MaterialWidget:
                    height: 400
                    size_hint_y: None
                MaterialWidget:
                    height: 400
                    size_hint_y: None
                MaterialWidget:
                    height: 400
                    size_hint_y: None
                MaterialWidget:
                    height: 400
                    size_hint_y: None
