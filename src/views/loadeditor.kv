<LoadEditor>:
    _fullSize: dp(200), dp(120)
    _container: container

    resistanceTextField: resistanceTextField

    prevButton: prevButton
    nextButton: nextButton

    BoxLayout:
        id: container
        orientation: 'vertical'
        size: self.parent.size
        pos: self.parent.pos
        padding: dp(8)

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            padding: dp(8)
            MaterialTextField:
                id: resistanceTextField
                size_hint_y: None
                title: 'Resistance'
                suffix: 'ohm'

        Widget

        BoxLayout:
            size: self.parent.width, nextButton.height
            size_hint_y: None

            MaterialButton:
                id: prevButton
                raised: False
                icon: unichr(0xf2fa)

            Widget

            MaterialButton:
                id: nextButton
                raised: False
                icon: unichr(0xf2fb)
